<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/artist_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="isberg.udacity.spotifystreamer.fragment.ArtistFragment"
        tools:ignore="MergeRootFrame" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/track_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="isberg.udacity.spotifystreamer.fragment.TrackFragment"
        tools:ignore="MergeRootFrame" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/player_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="isberg.udacity.spotifystreamer.fragment.PlayerFragment"
        tools:ignore="MergeRootFrame" />

</RelativeLayout>
