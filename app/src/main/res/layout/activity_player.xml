<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="isberg.udacity.spotifystreamer.MainActivity.MusicFragment">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/artistname_player_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:paddingLeft="5sp"
            android:paddingTop="12sp" />

        <TextView
            android:id="@+id/albumname_player_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:paddingLeft="5sp"
            android:paddingTop="12sp" />

        <ImageView
            android:id="@+id/albumcover_player_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"
            android:contentDescription="albumcover" />

        <TextView
            android:id="@+id/trackname_player_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:paddingLeft="5sp"
            android:paddingTop="12sp" />
    </LinearLayout>

    <LinearLayout
    android:id="@+id/linearlayout2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
    >

    <SeekBar
        android:id="@+id/track_playing_seekbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="0dp"
        android:progress="0"
        android:secondaryProgress="0" />

</LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/track_currenttime_textview"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            />

        <TextView
            android:id="@+id/track_totaltime_textview"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/player_prevTrack_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="playPreviousTrack" />

        <Button
            android:id="@+id/player_play_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="playCurrentTrack" />

        <Button
            android:id="@+id/player_nextTrack_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="playNextTrack" />
    </LinearLayout>

</LinearLayout>
